/**
 * Finds session data by ID and displays it in the modal.
 * @param {string} sessionId The session_id of the talk to display.
 */
function showSessionDetails(sessionId) {
    const session = sessionData.find(s => s.session_id === sessionId);
    const modal = document.getElementById('session-modal');
    const modalContent = document.getElementById('modal-content');

    if (!session) {
        console.error(`Session with ID ${sessionId} not found.`);
        return;
    }

    // Update modal content
    modalContent.querySelector('#modal-title').textContent = session.session_title;
    modalContent.querySelector('#modal-speakers').innerHTML = `<span class="font-semibold">Speakers:</span> ${session.speaker_list.join(', ')}`;
    modalContent.querySelector('#modal-description').textContent = session.session_description;
    
    // Update the detail boxes
    modalContent.querySelector('#detail-location').textContent = session.location;
    modalContent.querySelector('#detail-time').textContent = session.start_time;
    
    // Handle Prep Link - if TBD, show text, otherwise make it a link
    const prepLinkElement = modalContent.querySelector('#detail-prep-link');
    if (session.prep_link === 'TBD') {
        prepLinkElement.textContent = session.prep_link;
        prepLinkElement.classList.remove('text-primary', 'hover:text-blue-700');
        prepLinkElement.classList.add('text-gray-500');
    } else {
        prepLinkElement.textContent = 'View Link';
        prepLinkElement.href = session.prep_link;
        prepLinkElement.target = '_blank';
        prepLinkElement.classList.add('text-primary', 'hover:text-blue-700');
        prepLinkElement.classList.remove('text-gray-500');
    }

    // Show the modal
    modal.classList.remove('hidden');
}

/**
 * Closes the session details modal.
 */
function closeSessionDetails() {
    document.getElementById('session-modal').classList.add('hidden');
}

// 🔑 EXPLICITLY ATTACH TO THE GLOBAL WINDOW OBJECT 🔑
window.showSessionDetails = showSessionDetails;
window.closeSessionDetails = closeSessionDetails;
</script>
